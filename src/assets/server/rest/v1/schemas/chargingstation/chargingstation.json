{
  "$id": "chargingstation.json",
  "definitions": {
    "id": {
      "type": "string",
      "sanitize": "mongo"
    },
    "chargingProfile": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "common.json#/definitions/id"
        },
        "chargingStationID": {
          "$ref": "chargingstation.json#/definitions/id"
        },
        "connectorID": {
          "$ref": "chargingstation.json#/definitions/connectorID"
        },
        "chargePointID": {
          "type": "number",
          "sanitize": "mongo"
        },
        "profile": {
          "type": "object",
          "properties": {
            "chargingProfileId": {
              "type": "number",
              "sanitize": "mongo"
            },
            "transactionId": {
              "$ref": "transaction.json#/definitions/id"
            },
            "stackLevel": {
              "type": "number",
              "sanitize": "mongo"
            },
            "chargingProfilePurpose": {
              "type": "string",
              "sanitize": "mongo"
            },
            "chargingProfileKind": {
              "type": "string",
              "sanitize": "mongo"
            },
            "recurrencyKind": {
              "type": "string",
              "sanitize": "mongo"
            },
            "validFrom": {
              "type": "string",
              "format": "date-time",
              "sanitize": "mongo"
            },
            "validTo": {
              "type": "string",
              "format": "date-time",
              "sanitize": "mongo"
            },
            "chargingSchedule": {
              "type": "object",
              "properties": {
                "duration": {
                  "type": "number",
                  "sanitize": "mongo"
                },
                "startSchedule": {
                  "type": "string",
                  "format": "date-time",
                  "sanitize": "mongo"
                },
                "chargingRateUnit": {
                  "type": "string",
                  "sanitize": "mongo"
                },
                "chargingSchedulePeriod": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "startPeriod": {
                        "type": "number",
                        "sanitize": "mongo"
                      },
                      "limit": {
                        "type": "number",
                        "sanitize": "mongo"
                      },
                      "numberPhases": {
                        "type": "number",
                        "sanitize": "mongo"
                      }
                    },
                    "required": [
                      "startPeriod",
                      "limit"
                    ]
                  }
                },
                "minChargeRate": {
                  "type": "number",
                  "sanitize": "mongo"
                }
              },
              "required": [
                "chargingRateUnit",
                "chargingSchedulePeriod"
              ]
            }
          },
          "required": [
            "chargingProfileId",
            "stackLevel",
            "chargingProfilePurpose",
            "chargingProfileKind",
            "chargingSchedule"
          ]
        }
      },
      "required": [
        "chargingStationID",
        "profile"
      ]
    },
    "connectorID": {
      "type": "number",
      "sanitize": "mongo"
    },
    "connectorIDs": {
      "type": "string",
      "pattern": "^(\\d\\|?)*$",
      "sanitize": "mongo"
    }
  }
}
